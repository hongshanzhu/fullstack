{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "newLine": "LF",
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "removeComments": false,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",    
  ],
  "exclude": [
    "src/public/",
    "src/views/"
  ]
}